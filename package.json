{
  "name": "fedrag-privacy-rag-assistant",
  "version": "1.0.0",
  "description": "Privacy-first RAG assistant built on AWS infrastructure",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:e2e": "pnpm --filter @fedrag/api run test:e2e && pnpm --filter @fedrag/web run test:e2e",
    "test:e2e:full": "pnpm --filter @fedrag/api run test:e2e:full",
    "validate:deployment": "./scripts/validate-deployment.sh",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
